{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "AW&Friends Help Center",
  "colors": {
    "primary": "#578BFA",
    "light": "#578BFA",
    "dark": "#578BFA"
  },
  "favicon": "/favicon.png",
  "navigation": {
    "languages": [
      {
        "tabs": [
          {
            "tab": "Home",
            "groups": [
              {
                "group": "Welcome",
                "icon": "house",
                "pages": [
                  "docs/index",
                  "docs/welcome/about",
                  "docs/welcome/help",
                  "docs/welcome/community"
                ]
              }
            ]
          },
          {
            "tab": "Legal",
            "groups": [
              {
                "group": "Overview",
                "icon": "house",
                "pages": ["docs/legal/index"]
              },
              {
                "group": "Statements",
                "pages": [
                  "docs/legal/statements/privacy-policy",
                  "docs/legal/statements/terms-of-service",
                  "docs/legal/statements/terms-of-use",
                  "docs/legal/statements/user-rights",
                  "docs/legal/statements/eula",
                  "docs/legal/statements/subprocessors"
                ]
              },
              {
                "group": "Requests",
                "pages": ["en/legal/requests/data-requests"]
              },
              {
                "group": "Agreements",
                "icon": "handshake",
                "pages": [
                  "docs/legal/agreements/cla",
                  "docs/legal/agreements/ecla",
                  "docs/legal/agreements/sla",
                  "docs/legal/agreements/spa"
                ]
              },
              {
                "group": "Crypto",
                "pages": [
                  "docs/legal/crypto/binding",
                  "docs/legal/crypto/blocknet",
                  "docs/legal/crypto/ledger"
                ]
              },
              {
                "group": "Disclosures",
                "pages": [
                  "docs/legal/disclosures/disclosure",
                  "docs/legal/disclosures/law"
                ]
              }
            ]
          }
        ],
        "language": "en"
      },
      {
        "tabs": [
          {
            "tab": "Casa",
            "groups": [
              {
                "group": "Bienvenido",
                "icon": "house",
                "pages": [
                  "translations/es/index",
                  "translations/es/Bienvenido/acercade",
                  "translations/es/Bienvenido/ayunda"
                ]
              }
            ]
          }
        ],
        "language": "es"
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Discord",
          "href": "https://discord.awfixer.com",
          "icon": "discord"
        },
        {
          "anchor": "Blog",
          "href": "https://blog.awfixer.com",
          "icon": "newspaper"
        },
        {
          "anchor": "Reddit",
          "href": "https://reddit.com/r/awfixerandfriends",
          "icon": "reddit"
        }
      ]
    }
  },
  "logo": {
    "light": "/favicon.png",
    "dark": "/favicon.png"
  },
  "navbar": {
    "links": [
      {
        "label": "GitHub",
        "href": "https://github.com/awfixer-org",
        "icon": "github"
      },
      {
        "label": "Support",
        "href": "https://discord.awfixer.com",
        "icon": "discord"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Dashboard",
      "href": "https://dash.awfixer.com"
    }
  },
  "contextual": {
    "options": [
      "copy",
      "view",
      "chatgpt",
      "claude",
      "perplexity",
      "mcp",
      "cursor",
      "vscode"
    ]
  },
  "footer": {
    "links": [
      {
        "header": "Legal",
        "items": [
          {
            "href": "https://link.awfixer.com/tos",
            "label": "Terms of Service"
          },
          {
            "href": "https://link.awfixer.com/privacy",
            "label": "Privacy Policy"
          }
        ]
      }
    ],
    "socials": {
      "x": "https://x.com/awandfriends",
      "github": "https://github.com/awfixer-org",
      "discord": "https://discord.awfixer.com",
      "reddit": "https://reddit.com/r/awfixerandfriends"
    }
  },
  "redirects": [
    {
      "source": "/privacy",
      "destination": "/docs/legal/statements/privacy-policy",
      "permanent": true
    },
    {
      "source": "/tos",
      "destination": "/docs/legal/statements/terms-of-service",
      "permanent": true
    }
  ]
}
